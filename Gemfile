source 'https://rubygems.org'

gem 'rails', '3.2.13'
gem 'bootstrap-sass'
gem 'haml-rails'
gem 'jquery-rails'

group :assets do
	gem 'sass-rails',   '~> 3.2.3'
	gem 'coffee-rails', '~> 3.2.1'
	gem 'uglifier', '>= 1.0.3'
end

group :test do
	gem 'cucumber-rails'
	gem 'capybara'
	gem 'database_cleaner'
end

group :development, :test do
	gem 'rspec-rails'
	gem 'sqlite3'
end

group :production do
	gem 'mysql2'
end